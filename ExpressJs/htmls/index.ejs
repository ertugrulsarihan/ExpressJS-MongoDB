<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs')%>
  <body>
    <%- include('./partials/nav.ejs')%>
    <div class="dersler content">
      <h2>Bütün Dersler</h2>
      <% if(lessons.length > 0){ %>
        <% lessons.forEach(lesson=>{ %>
          <a href="/lessons/<%=lesson._id%>">
          <h3 class="title"><%=lesson.title%></h3>
          <p class="title"><%=lesson.content%></h3>
          </a>
            <% }) %>
            <% } else { %>
              <p>Henüz ders eklenmedi</p>
              <% } %>
    </div>
  </body>
</html>
